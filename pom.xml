<?xml version="1.0" encoding="utf-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>

    <name>SlideshowFX</name>
    <groupId>com.twasyl</groupId>
    <artifactId>slideshowfx</artifactId>
    <version>@@NEXT-VERSION@@</version>
    <packaging>pom</packaging>

    <scm>
        <connection>scm:git:https://github.io/twasyl/SlideshowFX</connection>
        <developerConnection>scm:git:https://github.io/twasyl/SlideshowFX</developerConnection>
        <url>https://github.io/twasyl/SlideshowFX</url>
    </scm>

    <developers>
        <developer>
            <name>Thierry Wasylczenko</name>
            <roles>
                <role>architect</role>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>https://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <modules>
        <!-- Main application modules -->
        <module>SlideshowFX-app</module>
        <module>SlideshowFX-content-extension</module>
        <module>SlideshowFX-engines</module>
        <module>SlideshowFX-global-configuration</module>
        <module>SlideshowFX-hosting-connector</module>
        <module>SlideshowFX-icons</module>
        <module>SlideshowFX-logs</module>
        <module>SlideshowFX-markup</module>
        <module>SlideshowFX-osgi</module>
        <module>SlideshowFX-plugin</module>
        <module>SlideshowFX-server</module>
        <module>SlideshowFX-setup</module>
        <module>SlideshowFX-snippet-executor</module>
        <module>SlideshowFX-ui-controls</module>
        <module>SlideshowFX-utils</module>

        <!-- Plugins -->
        <!-- Content extension plugins -->
        <module>SlideshowFX-alert-extension</module>
        <module>SlideshowFX-code-extension</module>
        <module>SlideshowFX-image-extension</module>
        <module>SlideshowFX-link-extension</module>
        <module>SlideshowFX-quiz-extension</module>
        <module>SlideshowFX-quote-extension</module>
        <module>SlideshowFX-sequence-diagram-extension</module>
        <module>SlideshowFX-shape-extension</module>
        <module>SlideshowFX-snippet-extension</module>

        <!-- Markup plugins -->
        <module>SlideshowFX-asciidoctor</module>
        <module>SlideshowFX-html</module>
        <module>SlideshowFX-markdown</module>
        <module>SlideshowFX-textile</module>

        <!-- Hosting connectors plugins -->
        <module>SlideshowFX-box-hosting-connector</module>
        <module>SlideshowFX-drive-hosting-connector</module>
        <module>SlideshowFX-dropbox-hosting-connector</module>

        <!-- Snippet executor plugins -->
        <module>SlideshowFX-go-executor</module>
        <module>SlideshowFX-golo-executor</module>
        <module>SlideshowFX-groovy-executor</module>
        <module>SlideshowFX-java-executor</module>
        <module>SlideshowFX-javascript-executor</module>
        <module>SlideshowFX-kotlin-executor</module>
        <module>SlideshowFX-scala-executor</module>
    </modules>

    <properties>
        <project.slideshowfx.app.version>1.5-SNAPSHOT</project.slideshowfx.app.version>
        <project.slideshowfx.content.extension.version>1.1</project.slideshowfx.content.extension.version>
        <project.slideshowfx.engines.version>1.2</project.slideshowfx.engines.version>
        <project.slideshowfx.global.configuration.version>1.1</project.slideshowfx.global.configuration.version>
        <project.slideshowfx.hosting.connector.version>1.1</project.slideshowfx.hosting.connector.version>
        <project.slideshowfx.html.version>1.0</project.slideshowfx.html.version>
        <project.slideshowfx.icons.version>1.0</project.slideshowfx.icons.version>
        <project.slideshowfx.logs.version>1.0</project.slideshowfx.logs.version>
        <project.slideshowfx.markdown.version>1.0</project.slideshowfx.markdown.version>
        <project.slideshowfx.markup.version>1.0</project.slideshowfx.markup.version>
        <project.slideshowfx.plugin.version>1.0</project.slideshowfx.plugin.version>
        <project.slideshowfx.osgi.version>1.2</project.slideshowfx.osgi.version>
        <project.slideshowfx.server.version>1.1</project.slideshowfx.server.version>
        <project.slideshowfx.snippet.executor.version>1.0</project.slideshowfx.snippet.executor.version>
        <project.slideshowfx.textile.version>1.2</project.slideshowfx.textile.version>
        <project.slideshowfx.ui.controls.version>1.3</project.slideshowfx.ui.controls.version>
        <project.slideshowfx.utils.version>1.2</project.slideshowfx.utils.version>

        <plugin.antrun.version>1.8</plugin.antrun.version>
        <plugin.assembly.version>3.1.0</plugin.assembly.version>
        <plugin.compiler.version>3.7.0</plugin.compiler.version>
        <plugin.jar.version>3.0.2</plugin.jar.version>
        <plugin.resources.version>3.0.2</plugin.resources.version>

        <dependency.asciidoctorj.version>1.5.6</dependency.asciidoctorj.version>
        <dependency.felix.version>5.6.8</dependency.felix.version>
        <dependency.freemarker.version>2.3.26-incubating</dependency.freemarker.version>
        <dependency.jsoup.version>1.10.3</dependency.jsoup.version>
        <dependency.junit.version>5.0.0</dependency.junit.version>
        <dependency.markdown.version>0.13</dependency.markdown.version>
        <dependency.mockito.version>2.10.0</dependency.mockito.version>
        <dependency.rxJava.version>2.1.3</dependency.rxJava.version>
        <dependency.twitter.version>4.0.6</dependency.twitter.version>
        <dependency.vertx.version>3.4.2</dependency.vertx.version>
        <dependency.wikitext.version>3.0.18</dependency.wikitext.version>
        <dependency.zxing.version>3.3.0</dependency.zxing.version>

        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- Modules dependencies -->
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-app</artifactId>
                <version>${project.slideshowfx.app.version}</version>
            </dependency>
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-content-extension</artifactId>
                <version>${project.slideshowfx.content.extension.version}</version>
            </dependency>
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-engines</artifactId>
                <version>${project.slideshowfx.engines.version}</version>
            </dependency>
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-global-configuration</artifactId>
                <version>${project.slideshowfx.global.configuration.version}</version>
            </dependency>
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-hosting-connector</artifactId>
                <version>${project.slideshowfx.hosting.connector.version}</version>
            </dependency>
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-html</artifactId>
                <version>${project.slideshowfx.html.version}</version>
            </dependency>
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-icons</artifactId>
                <version>${project.slideshowfx.icons.version}</version>
            </dependency>
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-logs</artifactId>
                <version>${project.slideshowfx.logs.version}</version>
            </dependency>
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-markdown</artifactId>
                <version>${project.slideshowfx.markdown.version}</version>
            </dependency>
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-markup</artifactId>
                <version>${project.slideshowfx.markup.version}</version>
            </dependency>
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-plugin</artifactId>
                <version>${project.slideshowfx.plugin.version}</version>
            </dependency>
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-osgi</artifactId>
                <version>${project.slideshowfx.osgi.version}</version>
            </dependency>
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-server</artifactId>
                <version>${project.slideshowfx.server.version}</version>
            </dependency>
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-snippet-executor</artifactId>
                <version>${project.slideshowfx.snippet.executor.version}</version>
            </dependency>
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-textile</artifactId>
                <version>${project.slideshowfx.textile.version}</version>
            </dependency>
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-ui-controls</artifactId>
                <version>${project.slideshowfx.ui.controls.version}</version>
            </dependency>
            <dependency>
                <groupId>com.twasyl</groupId>
                <artifactId>slideshowfx-utils</artifactId>
                <version>${project.slideshowfx.utils.version}</version>
            </dependency>

            <!-- Regular dependencies -->
            <dependency>
                <groupId>org.asciidoctor</groupId>
                <artifactId>asciidoctorj</artifactId>
                <version>${dependency.asciidoctorj.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.felix</groupId>
                <artifactId>org.apache.felix.framework</artifactId>
                <version>${dependency.felix.version}</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>org.freemarker</groupId>
                <artifactId>freemarker</artifactId>
                <version>${dependency.freemarker.version}</version>
            </dependency>
            <dependency>
                <groupId>org.jsoup</groupId>
                <artifactId>jsoup</artifactId>
                <version>${dependency.jsoup.version}</version>
            </dependency>
            <dependency>
                <groupId>io.reactivex.rxjava2</groupId>
                <artifactId>rxjava</artifactId>
                <version>${dependency.rxJava.version}</version>
            </dependency>
            <dependency>
                <groupId>com.google.zxing</groupId>
                <artifactId>javase</artifactId>
                <version>${dependency.zxing.version}</version>
            </dependency>
            <dependency>
                <groupId>org.jruby</groupId>
                <artifactId>jruby-complete</artifactId>
                <version>1.7.26</version>
            </dependency>
            <dependency>
                <groupId>io.vertx</groupId>
                <artifactId>vertx-core</artifactId>
                <version>${dependency.vertx.version}</version>
            </dependency>

            <!-- Test dependencies -->
            <dependency>
                <groupId>org.junit.jupiter</groupId>
                <artifactId>junit-jupiter-api</artifactId>
                <version>${dependency.junit.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.junit.jupiter</groupId>
                <artifactId>junit-jupiter-engine</artifactId>
                <version>${dependency.junit.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.mockito</groupId>
                <artifactId>mockito-core</artifactId>
                <version>${dependency.mockito.version}</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-antrun-plugin</artifactId>
                    <version>${plugin.antrun.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>${plugin.assembly.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>${plugin.compiler.version}</version>
                    <configuration>
                        <encoding>UTF-8</encoding>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>${plugin.jar.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>${plugin.resources.version}</version>
                    <configuration>
                        <encoding>UTF-8</encoding>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>