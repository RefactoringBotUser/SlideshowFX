<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.twasyl</groupId>
        <artifactId>slideshowfx</artifactId>
        <version>@@NEXT-VERSION@@</version>
    </parent>

    <name>SlideshowFX setup</name>
    <description>Module for the installer of SlideshowFX</description>

    <artifactId>slideshowfx-setup</artifactId>
    <version>1.2</version>

    <properties>
        <setup.package.dir>${project.build.directory}${file.separator}dependency${file.separator}package</setup.package.dir>
        <setup.package.documentations.dir>${setup.package.dir}${file.separator}documentations</setup.package.documentations.dir>
        <setup.package.documentations.html.dir>${setup.package.documentations.dir}${file.separator}html</setup.package.documentations.html.dir>
        <setup.package.documentations.pdf.dir>${setup.package.documentations.dir}${file.separator}pdf</setup.package.documentations.pdf.dir>
        <setup.package.plugins.dir>${setup.package.dir}${file.separator}plugins</setup.package.plugins.dir>
        <setup.package.markups.dir>${setup.package.plugins.dir}${file.separator}markups</setup.package.markups.dir>
        <setup.package.extensions.dir>${setup.package.plugins.dir}${file.separator}extensions</setup.package.extensions.dir>
        <setup.package.executors.dir>${setup.package.plugins.dir}${file.separator}executors</setup.package.executors.dir>
        <setup.package.hostingConnectors.dir>${setup.package.plugins.dir}${file.separator}hostingConnectors</setup.package.hostingConnectors.dir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-app</artifactId>
            <type>zip</type>
            <classifier>bundle</classifier>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-global-configuration</artifactId>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-icons</artifactId>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-logs</artifactId>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-ui-controls</artifactId>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-utils</artifactId>
        </dependency>

        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-documentation</artifactId>
            <type>zip</type>
            <classifier>html</classifier>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-documentation</artifactId>
            <type>zip</type>
            <classifier>pdf</classifier>
            <scope>runtime</scope>
        </dependency>

        <!-- Markup plugins -->
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-asciidoctor</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-html</artifactId>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-markdown</artifactId>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-textile</artifactId>
            <scope>runtime</scope>
        </dependency>
        <!-- Hosting connector plugins -->
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-box-hosting-connector</artifactId>
            <version>1.2</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-drive-hosting-connector</artifactId>
            <version>1.3</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-dropbox-hosting-connector</artifactId>
            <version>1.2</version>
            <scope>runtime</scope>
        </dependency>
        <!-- Content extension plugins -->
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-alert-extension</artifactId>
            <version>1.2</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-code-extension</artifactId>
            <version>1.2</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-image-extension</artifactId>
            <version>1.3</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-link-extension</artifactId>
            <version>1.2</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-quiz-extension</artifactId>
            <version>1.1</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-quote-extension</artifactId>
            <version>1.1</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-sequence-diagram-extension</artifactId>
            <version>1.1</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-shape-extension</artifactId>
            <version>1.0</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-snippet-extension</artifactId>
            <version>1.2</version>
        </dependency>
        <!-- Snippet executor plugins -->
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-go-executor</artifactId>
            <version>1.0</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-golo-executor</artifactId>
            <version>1.0</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-groovy-executor</artifactId>
            <version>1.0</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-java-executor</artifactId>
            <version>1.0</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-javascript-executor</artifactId>
            <version>1.0</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-kotlin-executor</artifactId>
            <version>1.0</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.twasyl</groupId>
            <artifactId>slideshowfx-scala-executor</artifactId>
            <version>1.0</version>
            <scope>runtime</scope>
        </dependency>

        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
        </dependency>
    </dependencies>

    <build>
        <finalName>SlideshowFX-setup-${project.version}</finalName>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-setup-dependencies</id>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <excludeTypes>zip</excludeTypes>
                            <excludeScope>test</excludeScope>
                            <includeScope>compile</includeScope>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-documentation</id>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <includeArtifactIds>slideshowfx-documentation</includeArtifactIds>
                            <outputDirectory>${setup.package.documentations.dir}</outputDirectory>
                            <excludeTransitive>true</excludeTransitive>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-markup-plugins</id>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <includeArtifactIds>slideshowfx-asciidoctor,slideshowfx-html,slideshowfx-markdown,slideshowfx-textile</includeArtifactIds>
                            <outputDirectory>${setup.package.markups.dir}</outputDirectory>
                            <excludeTransitive>true</excludeTransitive>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-hosting-connector-plugins</id>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <includeArtifactIds>slideshowfx-box-hosting-connector,slideshowfx-drive-hosting-connector,slideshowfx-dropbox-hosting-connector</includeArtifactIds>
                            <outputDirectory>${setup.package.hostingConnectors.dir}</outputDirectory>
                            <excludeTransitive>true</excludeTransitive>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-content-extension-plugins</id>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <includeArtifactIds>slideshowfx-alert-extension,slideshowfx-code-extension,slideshowfx-image-extension,slideshowfx-link-extension,slideshowfx-quiz-extension,slideshowfx-quote-extension,slideshowfx-sequence-diagram-extension,slideshowfx-shape-extension,slideshowfx-snippet-extension</includeArtifactIds>
                            <outputDirectory>${setup.package.extensions.dir}</outputDirectory>
                            <excludeTransitive>true</excludeTransitive>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-snippet-executor-plugins</id>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <includeArtifactIds>slideshowfx-go-executor,slideshowfx-golo-executor,slideshowfx-groovy-executor,slideshowfx-java-executor,slideshowfx-javascript-executor,slideshowfx-kotlin-executor,slideshowfx-scala-executor</includeArtifactIds>
                            <outputDirectory>${setup.package.executors.dir}</outputDirectory>
                            <excludeTransitive>true</excludeTransitive>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack-app-bundle</id>
                        <goals>
                            <goal>unpack-dependencies</goal>
                        </goals>
                        <phase>prepare-package</phase>
                        <configuration>
                            <includeArtifactIds>slideshowfx-app</includeArtifactIds>
                            <outputDirectory>${setup.package.dir}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                        </manifest>
                        <manifestEntries>
                            <Implementation-Title>SlideshowFX-setup</Implementation-Title>
                            <Implementation-Version>${project.version}</Implementation-Version>
                            <Implementation-Vendor>Thierry Wasylczenko</Implementation-Vendor>
                            <Main-Class>com.twasyl.slideshowfx.setup.app.SlideshowFXSetup</Main-Class>
                            <JavaFX-Application-Class>com.twasyl.slideshowfx.setup.app.SlideshowFXSetup</JavaFX-Application-Class>
                            <JavaFX-Version>8.0+</JavaFX-Version>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <target name="Bundling ${project.artifactId} package">
                                <condition property="buildTarget" value="deployOSX">
                                    <os family="mac" />
                                </condition>
                                <condition property="buildTarget" value="deployWindows">
                                    <os family="windows" />
                                </condition>
                                <condition property="buildTarget" value="deployUnknown">
                                    <os family="unix" />
                                </condition>
                                <property name="deployOutDir" value="${project.build.directory}/distributions"/>
                                <property name="deployOutFile" value="SlideshowFXSetup"/>
                                <property name="deployResourcesDir" value="${project.build.directory}/dependency"/>
                                <property name="classpath" value="${JAVA_HOME}/lib/ant-javafx.jar"/>
                                <property name="applicationVersion" value="${project.slideshowfx.app.version}" />
                                <copy file="${project.build.directory}/${project.build.finalName}.${project.packaging}"
                                      todir="${deployResourcesDir}"/>
                                <ant antfile="${project.basedir}/src/assembly/javafx/SlideshowFX-setup.xml"
                                     target="${buildTarget}"/>
                                <delete>
                                    <fileset dir="${deployOutDir}" excludes="bundles/**" />
                                </delete>
                                <zip  destfile="${project.build.directory}${file.separator}${deployOutFile}.zip">
                                    <fileset dir="${deployOutDir}${file.separator}bundles" includes="${deployOutFile}*/**" excludes="*.html,*.jnlp"/>
                                </zip>
                                <attachartifact file="${project.build.directory}${file.separator}${deployOutFile}.zip" classifier="bundle" type="zip"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>